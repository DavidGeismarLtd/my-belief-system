<div class="min-h-screen bg-gray-50 py-8 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to "‚Üê Back to Dashboard", dashboard_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
    </div>

    <!-- Actor Header -->
    <div class="bg-white rounded-lg shadow-sm p-8 mb-6">
      <div class="flex items-start gap-6">
        <!-- Actor Image -->
        <% if @actor[:image_url] %>
          <img src="<%= @actor[:image_url] %>" alt="<%= @actor[:name] %>" class="w-24 h-24 rounded-full object-cover flex-shrink-0">
        <% else %>
          <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center flex-shrink-0">
            <span class="text-4xl text-gray-500"><%= @actor[:name][0] %></span>
          </div>
        <% end %>

        <!-- Actor Info -->
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @actor[:name] %></h1>
          <p class="text-gray-600 mb-4">
            <%= @actor[:type] %>
            <% if @actor[:role] %> ‚Ä¢ <%= @actor[:role] %><% end %>
            <% if @actor[:party] %> ‚Ä¢ <%= @actor[:party] %><% end %>
          </p>
          <% if @actor[:description] %>
            <p class="text-gray-700 mb-4"><%= @actor[:description] %></p>
          <% end %>

          <!-- Program Link for Parties/Organizations -->
          <% if @actor[:program_url] && (@actor[:type] == 'Party' || @actor[:type] == 'Organization') %>
            <a href="<%= @actor[:program_url] %>" target="_blank" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium">
              üìÑ View Official Program
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          <% end %>
        </div>

        <!-- Alignment Score -->
        <div class="text-right flex-shrink-0">
          <div class="text-4xl font-bold text-blue-600 mb-1"><%= @actor[:alignment_score] %>%</div>
          <div class="text-sm text-gray-600">Overall Alignment</div>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="bg-white rounded-lg shadow-sm mb-6">
      <div class="border-b border-gray-200">
        <nav class="flex">
          <button class="px-6 py-4 text-sm font-medium text-blue-600 border-b-2 border-blue-600">
            Overview
          </button>
          <button class="px-6 py-4 text-sm font-medium text-gray-600 hover:text-gray-900">
            Dimensions
          </button>
          <button class="px-6 py-4 text-sm font-medium text-gray-600 hover:text-gray-900">
            Timeline
          </button>
        </nav>
      </div>

      <!-- Tab Content: Overview -->
      <div class="p-8">
        <!-- Comparison Chart -->
        <div class="mb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Value Comparison</h2>
          <div class="bg-gray-100 rounded-lg p-8">
            <svg viewBox="0 0 400 400" class="w-full h-auto max-w-2xl mx-auto">
              <!-- Radar Chart Background -->
              <circle cx="200" cy="200" r="150" fill="none" stroke="#E5E7EB" stroke-width="1"/>
              <circle cx="200" cy="200" r="100" fill="none" stroke="#E5E7EB" stroke-width="1"/>
              <circle cx="200" cy="200" r="50" fill="none" stroke="#E5E7EB" stroke-width="1"/>

              <!-- Axes -->
              <% 8.times do |i| %>
                <% angle = (i * 45 - 90) * Math::PI / 180 %>
                <% x = 200 + 150 * Math.cos(angle) %>
                <% y = 200 + 150 * Math.sin(angle) %>
                <line x1="200" y1="200" x2="<%= x %>" y2="<%= y %>" stroke="#E5E7EB" stroke-width="1"/>
              <% end %>

              <!-- User Data (Blue) -->
              <% user_points = @user_portrait[:dimensions].map.with_index do |dim, i|
                angle = (i * 45 - 90) * Math::PI / 180
                radius = ((dim[:position] + 100) / 200.0) * 150
                x = 200 + radius * Math.cos(angle)
                y = 200 + radius * Math.sin(angle)
                "#{x},#{y}"
              end.join(" ") %>
              <polygon points="<%= user_points %>" fill="rgba(59, 130, 246, 0.2)" stroke="#3B82F6" stroke-width="2"/>

              <!-- Actor Data (Red) -->
              <% actor_points = @actor[:dimensions].map.with_index do |dim, i|
                angle = (i * 45 - 90) * Math::PI / 180
                radius = ((dim[:actor_position] + 100) / 200.0) * 150
                x = 200 + radius * Math.cos(angle)
                y = 200 + radius * Math.sin(angle)
                "#{x},#{y}"
              end.join(" ") %>
              <polygon points="<%= actor_points %>" fill="rgba(239, 68, 68, 0.2)" stroke="#EF4444" stroke-width="2"/>
            </svg>
            <div class="flex justify-center gap-6 mt-4 text-sm">
              <div class="flex items-center gap-2">
                <div class="w-4 h-4 bg-blue-500 rounded"></div>
                <span class="text-gray-700">Your Values</span>
              </div>
              <div class="flex items-center gap-2">
                <div class="w-4 h-4 bg-red-500 rounded"></div>
                <span class="text-gray-700"><%= @actor[:name] %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Dimension Breakdown -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Alignment by Dimension</h2>
          <div class="space-y-4">
            <% @actor[:dimensions].each do |dimension| %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="font-semibold text-gray-900"><%= dimension[:name] %></h3>
                  <span class="text-lg font-bold
                    <% if dimension[:alignment] >= 80 %>text-green-600
                    <% elsif dimension[:alignment] >= 50 %>text-blue-600
                    <% elsif dimension[:alignment] >= 30 %>text-amber-600
                    <% else %>text-red-600<% end %>">
                    <%= dimension[:alignment] %>%
                  </span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2 mb-3">
                  <div class="h-2 rounded-full
                    <% if dimension[:alignment] >= 80 %>bg-green-500
                    <% elsif dimension[:alignment] >= 50 %>bg-blue-500
                    <% elsif dimension[:alignment] >= 30 %>bg-amber-500
                    <% else %>bg-red-500<% end %>"
                    style="width: <%= dimension[:alignment] %>%"></div>
                </div>
                <div class="flex justify-between text-sm text-gray-600">
                  <span>You: <%= dimension[:user_position] %></span>
                  <span><%= @actor[:name] %>: <%= dimension[:actor_position] %></span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Interventions (for Personalities) -->
    <% if @actor[:type] == 'Personality' && @actor[:interventions].present? %>
      <div class="bg-white rounded-lg shadow-sm p-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Recent Interventions</h2>
        <div class="space-y-4">
          <% @actor[:interventions].each do |intervention| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors">
              <div class="flex items-start gap-3">
                <!-- Platform Icon -->
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                  <% case intervention[:platform] %>
                  <% when 'twitter' %>
                    <span class="text-lg">ùïè</span>
                  <% when 'youtube' %>
                    <span class="text-lg">‚ñ∂Ô∏è</span>
                  <% when 'press_release' %>
                    <span class="text-lg">üì∞</span>
                  <% else %>
                    <span class="text-lg">üîó</span>
                  <% end %>
                </div>

                <!-- Content -->
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2">
                    <span class="text-xs font-semibold text-gray-500 uppercase"><%= intervention[:type] %></span>
                    <span class="text-xs text-gray-400">‚Ä¢</span>
                    <span class="text-xs text-gray-500"><%= time_ago_in_words(intervention[:published_at]) %> ago</span>
                  </div>
                  <p class="text-gray-800 mb-3"><%= intervention[:content] %></p>
                  <% if intervention[:source_url] %>
                    <a href="<%= intervention[:source_url] %>" target="_blank" class="text-sm text-blue-600 hover:text-blue-700 inline-flex items-center gap-1">
                      View source
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </a>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
