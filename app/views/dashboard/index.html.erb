<div class="min-h-screen bg-gray-50 py-8 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Your Alignment Dashboard</h1>
      <p class="text-gray-600">See how political parties and personalities align with your values</p>
    </div>

    <!-- Quick Actions -->
    <div class="mb-8 flex gap-4">
      <%= link_to "View My Values", my_values_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
      <span class="text-gray-300">|</span>
      <%= link_to "Refine Portrait", onboarding_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
      <span class="text-gray-300">|</span>
      <%= link_to "Browse All Actors", actors_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
    </div>

    <!-- Alignment Legend -->
    <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
      <div class="flex items-center gap-6 text-sm">
        <span class="font-semibold text-gray-700">Alignment:</span>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-green-500 rounded"></div>
          <span class="text-gray-600">Strong (80-100%)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-blue-500 rounded"></div>
          <span class="text-gray-600">Moderate (50-80%)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-amber-500 rounded"></div>
          <span class="text-gray-600">Weak (30-50%)</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-red-500 rounded"></div>
          <span class="text-gray-600">Misalignment (0-30%)</span>
        </div>
      </div>
    </div>

    <!-- Actor Cards Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @actors.each do |actor| %>
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
          <!-- Card Header -->
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-start gap-4 mb-2">
              <!-- Actor Image -->
              <% if actor[:image_url] %>
                <img src="<%= actor[:image_url] %>" alt="<%= actor[:name] %>" class="w-16 h-16 rounded-full object-cover flex-shrink-0">
              <% else %>
                <div class="w-16 h-16 rounded-full bg-gray-200 flex items-center justify-center flex-shrink-0">
                  <span class="text-2xl text-gray-500"><%= actor[:name][0] %></span>
                </div>
              <% end %>

              <!-- Actor Info -->
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900"><%= actor[:name] %></h3>
                <p class="text-sm text-gray-600">
                  <%= actor[:type] %>
                  <% if actor[:role] %> â€¢ <%= actor[:role] %><% end %>
                </p>
              </div>

              <!-- Trend Indicator -->
              <% if actor[:trend] == "up" %>
                <span class="text-green-600 text-xl">â†—</span>
              <% elsif actor[:trend] == "down" %>
                <span class="text-red-600 text-xl">â†˜</span>
              <% else %>
                <span class="text-gray-400 text-xl">â†’</span>
              <% end %>
            </div>
          </div>

          <!-- Alignment Score -->
          <div class="p-6">
            <div class="mb-4">
              <div class="flex items-baseline justify-between mb-2">
                <span class="text-2xl font-bold
                  <% if actor[:alignment_color] == 'green' %>text-green-600
                  <% elsif actor[:alignment_color] == 'blue' %>text-blue-600
                  <% elsif actor[:alignment_color] == 'amber' %>text-amber-600
                  <% else %>text-red-600<% end %>">
                  <%= actor[:alignment_score] %>%
                </span>
                <span class="text-sm font-medium text-gray-600"><%= actor[:alignment_label] %></span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="h-2 rounded-full
                  <% if actor[:alignment_color] == 'green' %>bg-green-500
                  <% elsif actor[:alignment_color] == 'blue' %>bg-blue-500
                  <% elsif actor[:alignment_color] == 'amber' %>bg-amber-500
                  <% else %>bg-red-500<% end %>"
                  style="width: <%= actor[:alignment_score] %>%"></div>
              </div>
            </div>

            <!-- Strong Alignment -->
            <% if actor[:strong_dimensions].any? %>
              <div class="mb-3">
                <p class="text-xs font-semibold text-gray-700 mb-1">Strong alignment on:</p>
                <ul class="text-sm text-gray-600 space-y-1">
                  <% actor[:strong_dimensions].take(2).each do |dim| %>
                    <li class="flex items-start">
                      <span class="text-green-500 mr-1">â€¢</span>
                      <%= dim %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Weak Alignment -->
            <% if actor[:weak_dimensions].any? %>
              <div class="mb-4">
                <p class="text-xs font-semibold text-gray-700 mb-1">Weak alignment on:</p>
                <ul class="text-sm text-gray-600 space-y-1">
                  <% actor[:weak_dimensions].take(1).each do |dim| %>
                    <li class="flex items-start">
                      <span class="text-red-500 mr-1">â€¢</span>
                      <%= dim %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Actions -->
            <div class="flex gap-2">
              <%= link_to "View Details", actor_path(actor[:id]), class: "flex-1 text-center bg-blue-600 text-white px-4 py-2 rounded text-sm font-medium hover:bg-blue-700 transition-colors" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Empty State (if no actors) -->
    <% if @actors.empty? %>
      <div class="bg-white rounded-lg shadow-sm p-12 text-center">
        <div class="text-6xl mb-4">ðŸŽ¯</div>
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">No actors tracked yet</h2>
        <p class="text-gray-600 mb-6">Start tracking political parties and personalities to see alignment</p>
        <%= link_to "Browse Actors", actors_path, class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
