<div class="min-h-screen bg-gray-50 py-8 px-4">
  <div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Account</h1>
      <p class="text-gray-600">Update your email and password</p>
    </div>

    <!-- Edit Form -->
    <div class="bg-white rounded-lg shadow-sm p-8 mb-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
            <p class="text-sm text-gray-700">
              Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
            </p>
          </div>
        <% end %>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-900 mb-2" do %>
            New Password
            <span class="text-gray-500 font-normal">(leave blank if you don't want to change it)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none",
              placeholder: "Enter new password" %>
          <% if @minimum_password_length %>
            <p class="text-sm text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <!-- Password Confirmation Field -->
        <div>
          <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-semibold text-gray-900 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none",
              placeholder: "Re-enter new password" %>
        </div>

        <!-- Current Password Field -->
        <div>
          <%= f.label :current_password, class: "block text-sm font-semibold text-gray-900 mb-2" do %>
            Current Password
            <span class="text-gray-500 font-normal">(we need your current password to confirm your changes)</span>
          <% end %>
          <%= f.password_field :current_password, autocomplete: "current-password",
              class: "w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none",
              placeholder: "Enter current password" %>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <%= f.submit "Update Account", class: "w-full bg-blue-600 text-white px-6 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <!-- Cancel Account Section -->
    <div class="bg-white rounded-lg shadow-sm p-8 border-2 border-red-200">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">Cancel Account</h3>
      <p class="text-gray-600 mb-4">Unhappy with our service? You can delete your account and all associated data.</p>
      <%= button_to "Cancel My Account", registration_path(resource_name),
          data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." },
          method: :delete,
          class: "bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors" %>
    </div>

    <!-- Back Link -->
    <div class="mt-6 text-center">
      <%= link_to "â† Back", :back, class: "text-gray-600 hover:text-gray-900" %>
    </div>
  </div>
</div>
