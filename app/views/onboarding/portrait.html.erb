<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 py-12 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <div class="inline-block mb-4 px-4 py-2 bg-green-100 text-green-700 rounded-full text-sm font-semibold">
        ‚úì Assessment Complete
      </div>
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Your <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Value Portrait</span>
      </h1>
      <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
        Based on your answers, here's what you value politically
      </p>
    </div>

    <!-- Interactive Radar Chart -->
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-100 p-8 sm:p-10 mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-6 text-center">Your Political Dimensions</h2>
      <div class="relative w-full max-w-3xl mx-auto"
           data-controller="radar-chart"
           data-radar-chart-dimensions-value="<%= @portrait[:dimensions].map { |d| d[:name] }.to_json %>"
           data-radar-chart-user-values-value="<%= @portrait[:dimensions].map { |d| d[:position] }.to_json %>"
           data-radar-chart-show-comparison-value="false">

        <!-- SVG Container -->
        <div class="bg-gradient-to-br from-gray-50 to-white rounded-xl p-8 sm:p-12 relative">
          <svg data-radar-chart-target="svg" class="w-full h-auto" style="min-height: 400px;"></svg>

          <!-- Tooltip -->
          <div data-radar-chart-target="tooltip" class="hidden absolute z-10"></div>
        </div>

        <!-- Legend -->
        <div class="flex justify-center gap-6 mt-6 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-blue-500 rounded-full shadow-sm"></div>
            <span class="text-gray-700 font-medium">Your Values</span>
          </div>
        </div>

        <p class="text-center text-sm text-gray-500 mt-4">
          Hover over the data points to see detailed values for each dimension
        </p>
      </div>
    </div>

    <!-- Dimensions List -->
    <div class="space-y-5 mb-10">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 text-center">Your Values Breakdown</h2>

      <% @portrait[:dimensions].each do |dimension| %>
        <div class="group bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg hover:shadow-xl border border-gray-100 hover:border-blue-200 p-6 sm:p-8 transition-all duration-300">
          <h3 class="text-xl font-bold text-gray-900 mb-5 flex items-center gap-3">
            <span class="text-2xl">üìä</span>
            <%= dimension[:name] %>
          </h3>

          <!-- Position Indicator -->
          <div class="mb-6">
            <div class="flex justify-between text-sm font-semibold text-gray-700 mb-3">
              <span class="text-left flex-1"><%= dimension[:left_pole] %></span>
              <span class="text-center px-4 text-gray-400">‚Üê</span>
              <span class="text-right flex-1"><%= dimension[:right_pole] %></span>
            </div>
            <div class="relative h-4 bg-gradient-to-r from-blue-100 via-gray-100 to-red-100 rounded-full shadow-inner">
              <% position_percent = ((dimension[:position] + 100) / 2.0).round %>
              <div class="absolute top-1/2 -translate-y-1/2 w-6 h-6 bg-gradient-to-br from-blue-500 to-blue-600 rounded-full shadow-lg ring-4 ring-white transition-transform duration-200 group-hover:scale-110"
                   style="left: calc(<%= position_percent %>% - 12px)"></div>
            </div>
            <div class="text-center mt-2">
              <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-bold">
                Position: <%= dimension[:position] %>
              </span>
            </div>
          </div>

          <!-- Stats -->
          <div class="grid sm:grid-cols-2 gap-4 mb-5">
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-4 border border-purple-200">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-lg">üí™</span>
                <span class="text-sm font-bold text-purple-900">Strength</span>
              </div>
              <div class="flex items-baseline gap-2">
                <span class="text-2xl font-bold text-purple-700">
                  <% if dimension[:intensity] > 75 %>Strong<% elsif dimension[:intensity] > 50 %>Moderate<% else %>Weak<% end %>
                </span>
                <span class="text-sm text-purple-600">(<%= (dimension[:intensity] / 100.0).round(2) %>)</span>
              </div>
            </div>
            <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-4 border border-green-200">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-lg">‚úì</span>
                <span class="text-sm font-bold text-green-900">Confidence</span>
              </div>
              <div class="flex items-baseline gap-2">
                <span class="text-2xl font-bold text-green-700">
                  <% if dimension[:confidence] > 80 %>High<% elsif dimension[:confidence] > 60 %>Medium<% else %>Low<% end %>
                </span>
                <span class="text-sm text-green-600">(<%= (dimension[:confidence] / 100.0).round(2) %>)</span>
              </div>
            </div>
          </div>

          <!-- Lean Direction -->
          <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-xl p-4 border border-blue-100">
            <p class="text-gray-900 flex items-center gap-2">
              <span class="font-bold">You lean toward:</span>
              <% if dimension[:position] < -20 %>
                <span class="px-3 py-1 bg-blue-600 text-white rounded-full text-sm font-bold"><%= dimension[:left_pole] %></span>
              <% elsif dimension[:position] > 20 %>
                <span class="px-3 py-1 bg-red-600 text-white rounded-full text-sm font-bold"><%= dimension[:right_pole] %></span>
              <% else %>
                <span class="px-3 py-1 bg-gray-600 text-white rounded-full text-sm font-bold">Center/Balanced</span>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <%= button_to "Save & View My Dashboard", onboarding_complete_path, method: :post, class: "w-full sm:w-auto inline-flex items-center justify-center bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-4 rounded-xl font-bold shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105" %>
      <%= link_to "Refine My Values", onboarding_path, class: "w-full sm:w-auto inline-flex items-center justify-center bg-white text-gray-700 px-8 py-4 rounded-xl font-bold border-2 border-gray-300 hover:border-gray-400 shadow-md hover:shadow-lg transition-all duration-200" %>
    </div>
  </div>
</div>
