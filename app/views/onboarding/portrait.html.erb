<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 py-12 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <%= render 'shared/gradient_header',
               title: 'Your <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Value Portrait</span>',
               subtitle: "Based on your answers, here's what you value politically",
               badge_text: "âœ“ Assessment Complete",
               badge_color: "green",
               center: true %>

    <!-- Interactive Radar Chart -->
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-100 p-8 sm:p-10 mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-6 text-center">Your Political Dimensions</h2>
      <div class="relative w-full max-w-3xl mx-auto"
           data-controller="radar-chart"
           data-radar-chart-dimensions-value="<%= @portrait[:dimensions].map { |d| d[:name] }.to_json %>"
           data-radar-chart-user-values-value="<%= @portrait[:dimensions].map { |d| d[:position] }.to_json %>"
           data-radar-chart-show-comparison-value="false">

        <!-- SVG Container -->
        <div class="bg-gradient-to-br from-gray-50 to-white rounded-xl p-8 sm:p-12 relative">
          <svg data-radar-chart-target="svg" class="w-full h-auto" style="min-height: 400px;"></svg>

          <!-- Tooltip -->
          <div data-radar-chart-target="tooltip" class="hidden absolute z-10"></div>
        </div>

        <!-- Legend -->
        <div class="flex justify-center gap-6 mt-6 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-blue-500 rounded-full shadow-sm"></div>
            <span class="text-gray-700 font-medium">Your Values</span>
          </div>
        </div>

        <p class="text-center text-sm text-gray-500 mt-4">
          Hover over the data points to see detailed values for each dimension
        </p>
      </div>
    </div>

    <!-- Dimensions List -->
    <div class="space-y-5 mb-10">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8 text-center">Your Values Breakdown</h2>

      <% @portrait[:dimensions].each do |dimension| %>
        <%= render 'shared/dimension_card',
                   dimension_name: dimension[:name],
                   position: dimension[:position],
                   intensity: dimension[:intensity],
                   confidence: dimension[:confidence],
                   left_pole: dimension[:left_pole],
                   right_pole: dimension[:right_pole],
                   explanation: nil %>
      <% end %>
    </div>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <%= button_to "Save & View My Dashboard", onboarding_complete_path, method: :post, class: "w-full sm:w-auto inline-flex items-center justify-center bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-4 rounded-xl font-bold shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105" %>
      <%= link_to "Refine My Values", onboarding_path, class: "w-full sm:w-auto inline-flex items-center justify-center bg-white text-gray-700 px-8 py-4 rounded-xl font-bold border-2 border-gray-300 hover:border-gray-400 shadow-md hover:shadow-lg transition-all duration-200" %>
    </div>
  </div>
</div>
