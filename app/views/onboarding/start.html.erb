<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-8">
  <div class="max-w-2xl w-full">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-3">Before We Begin</h1>
      <p class="text-lg text-gray-600">Help us personalize your experience with a few quick questions</p>
    </div>

    <!-- Profile Form -->
    <div class="bg-white rounded-lg shadow-sm p-8">
      <%= form_with url: onboarding_save_profile_path, method: :post, class: "space-y-6" do |f| %>
        
        <!-- Country Selection -->
        <div>
          <label class="block text-sm font-semibold text-gray-900 mb-2">
            Which country do you live in? <span class="text-red-500">*</span>
          </label>
          <p class="text-sm text-gray-600 mb-3">This helps us show you relevant political actors and questions</p>
          <select name="country" required class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none">
            <option value="">Select your country</option>
            <% OnboardingController::COUNTRIES.each do |country| %>
              <option value="<%= country %>"><%= country %></option>
            <% end %>
          </select>
        </div>

        <!-- Age -->
        <div>
          <label class="block text-sm font-semibold text-gray-900 mb-2">
            What's your age? <span class="text-gray-400">(Optional)</span>
          </label>
          <input type="number" name="age" min="18" max="120" 
                 class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none"
                 placeholder="e.g., 35">
        </div>

        <!-- Gender -->
        <div>
          <label class="block text-sm font-semibold text-gray-900 mb-2">
            How do you identify? <span class="text-gray-400">(Optional)</span>
          </label>
          <select name="gender" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none">
            <option value="">Prefer not to say</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="non_binary">Non-binary</option>
            <option value="other">Other</option>
          </select>
        </div>

        <!-- Political Engagement -->
        <div>
          <label class="block text-sm font-semibold text-gray-900 mb-2">
            How politically engaged are you? <span class="text-gray-400">(Optional)</span>
          </label>
          <select name="political_engagement" class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none">
            <option value="">Select one</option>
            <option value="very_engaged">Very engaged - I follow politics daily</option>
            <option value="moderately_engaged">Moderately engaged - I keep up with major news</option>
            <option value="somewhat_engaged">Somewhat engaged - I check in occasionally</option>
            <option value="not_engaged">Not very engaged - I rarely follow politics</option>
          </select>
        </div>

        <!-- Privacy Note -->
        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
          <p class="text-sm text-gray-700">
            <span class="font-semibold">ðŸ”’ Your privacy matters:</span>
            This information helps us personalize your experience. We never share your data with third parties.
          </p>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= f.submit "Continue to Questions", class: "w-full bg-blue-600 text-white px-6 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <!-- Back Link -->
    <div class="text-center mt-6">
      <%= link_to "â† Back to Home", root_path, class: "text-gray-600 hover:text-gray-900" %>
    </div>
  </div>
</div>

